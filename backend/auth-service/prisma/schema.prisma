generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  name      String?
  googleId  String  @unique
  image     String?
  role      String  @unique
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())  
}
